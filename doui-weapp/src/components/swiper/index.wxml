<wxs src="../common/utils.wxs" module="Utils" />

<swiper
  indicator-dots="{{ indicatorDots }}"
  indicator-color="{{ indicatorColor }}"
  indicator-active-color="{{ indicatorActiveColor }}"
  autoplay="{{ autoplay }}"
  current="{{ current }}"
  interval="{{ interval }}"
  duration="{{ duration }}"
  circular="{{ circular }}"
  vertical="{{ vertical }}"
  previous-margin="{{ Utils.unitTranslateHandler(previousMargin) }}"
  next-margin="{{ Utils.unitTranslateHandler(nextMargin) }}"
  display-multiple-items="{{ displayMultipleItems }}"
  skip-hidden-item-layout="{{ skipHiddenItemLayout }}"
  easing-function="{{ easingFunction }}"
  style="width: {{ Utils.unitTranslateHandler(width) }}; height: {{ Utils.unitTranslateHandler(height) }};"
  class=""
  bindchange="onChange"
>
  <block wx:if="{{ !useslot }}">
    <swiper-item wx:for="{{ items }}" wx:key="{{ index }}">
      <image
        class="do-swiper-image {{ 'do-swiper-image' + index }}"
        src="{{ item }}"
        mode="widthFix"
      />
    </swiper-item>
  </block>

  <slot wx:else></slot>

</swiper>
